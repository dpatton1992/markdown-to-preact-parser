{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
  
    "compilerOptions": {
      "lib": ["dom", "es2022"],
      "module": "commonjs",
      "target": "ES6",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
  
      "outDir": "dist",
      "declaration": true,

      "jsx": "react",
      "jsxFactory": "h",
      "jsxFragmentFactory": "Fragment",
    },
  
    "include": ["src/**/*"]
  }